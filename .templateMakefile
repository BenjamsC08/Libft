CC = cc
NAME = 
SRCC =
EXT =
CFLAGS = -Wall -Wextra -Werror -g3 -o3
OBJ = $(SRCC:.c=.o)
INCLUDE = includes/
VALID = \033[1;32m
NOTVALID = \033[1;31m
INFOS = \033[1;36m
LOADING = \033[1;33m
RESET = \033[0m

all: $(NAME)

$(NAME): $(OBJ)
	@printf "\n$(VALID) - $(NAME): compilation succeed \tâœ…\n"
	@ar rcs $@ $^

%.o: %.c $(INCLUDE)
	@printf "\r$(LOADING) - $(NAME): compilation \t\tðŸ”ƒ "
	@$(CC) $(CFLAGS) -I$(INCLUDE) -MMD -c $< -o $@

clean:
	@rm -rf $(OBJ) $(OBJ:.o=.d)
	@echo "$(VALID) - $(NAME): clean \t\tâœ…"

fclean: clean
	@rm -f $(NAME)
	@echo "$(VALID) - $(NAME): fclean \t\tâœ…"

re: fclean all


listExt:
	@LIST=$$(find -wholename "./srcs/*.$(EXT)" | cut -c 3- | tr '\n' ' '); \
	printf "ðŸ—… $(INFOS)copy all $(EXT) sources files into clipboard :\n$(RESET)$$LIST\n"; \
	echo ;\
	echo -n $$LIST | xclip -selection clipboard; \

NbExt:
	@echo "Number of .$(EXT) files :" 
	@find -wholename "./srcs/*.$(EXT)" | wc -l


.PHONY: all clean fclean re cList nbC

-include $(OBJ:.o=.d)
