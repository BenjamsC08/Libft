CC = cc
NAME = 
SRCC = 
EXT =
OBJDIR = 
SRCDIR = 
CFLAGS = -Wall -Wextra -Werror -g3

OBJ = $(addprefix $(OBJDIR)/,$(SRCC:.c=.o))
GREEN = \033[1;32m
RED = \033[1;31m
BLUE = \033[1;36m
ORANGE = \033[1;33m
RESET = \033[0m

all: $(NAME)

$(NAME): $(OBJ)
	@printf "\n$(GREEN) - $(NAME): compilation succeed \tâœ…\n$(RESET)"
	@ar rcs $@ $^

$(OBJDIR)/%.o: $(SRCDIR)/%.c
	@printf "\r$(ORANGE) - $(NAME): compilation \t\tðŸ”ƒ$(RESET)"
	@$(CC) $(CFLAGS) -I$(INCLUDE) -MMD -c $< -o $@

clean:
	@rm -rf $(OBJ) $(OBJ:.o=.d)
	@echo "$(ORANGE) - $(NAME): clean \t\tðŸ†‘$(RESET)"

fclean: clean
	@rm -rf $(NAME) $(OBJDIR)
	@echo "$(RED) - $(NAME): fclean \t\tðŸ†‘$(RESET)"

re: fclean all


listExt:
	@LIST=$$(find -wholename "./$(SRCDIR)/*.$(EXT)" | sed 's|$(SRCDIR)/||' | cut -c 3- | tr '\n' ' '); \
	printf "ðŸ—… $(BLUE)copy all $(.EXT) sources files into clipboard :\n$(RESET)$$LIST\n"; \
	echo -n $$LIST | xclip -selection clipboard; \

NbExt:
	@echo "Number of .$(EXT) files :" 
	@find -wholename "./srcs/*.$(EXT)" | wc -l


.PHONY: all clean fclean re cList nbC

-include $(OBJ:.o=.d)
